<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #loading {
            height: calc(100vh - 120px);
        }        
    </style>
</head>
<body>
    <div id="app">

        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">Company name</h5>
            <nav class="my-2 my-md-0 mr-md-3">
                @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "p-2 text-dark" })
                @Html.ActionLink("About", "About", "Home", new { }, new { @class = "p-2 text-dark" })
                @Html.ActionLink("Contact", "Contact", "Home", new { }, new { @class = "p-2 text-dark" })
                @Html.ActionLink("Categorias", "Index", "Categories", new { }, new { @class = "p-2 text-dark" })
                @Html.ActionLink("Productos", "Index", "Products", new { }, new { @class = "p-2 text-dark" })
            </nav>
        </div>

        <div class="d-flex justify-content-center align-items-center" v-if="loading" id="loading">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>              

        <div class="container body-content" v-if="!loading">

            @RenderBody()

            <hr />

            <footer>
                <p>&copy; @DateTime.Now.Year - {{ message }}</p>
            </footer>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- development version, includes helpful console warnings -->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="~/Scripts/Site.js"></script>
   
</body>
</html>
