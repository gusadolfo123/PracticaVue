@model IEnumerable<RepasoMVC.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Categorias</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<button class="btn btn-sm btn-info" v-on:click="listarCategorias">Listar</button>
<button class="btn btn-sm btn-info" v-on:click="guardarCategoria">Guardar</button>

<table class="table table-hover">
     
    <tr v-for="(categoria, index) of categorias">
        <td>
            {{ categoria.CategoryID }}
        </td>
        <td>
            {{ categoria.Description }}
        </td>
        <td>
            <button class="btn btn-sm btn-primary" v-on:click="editarCategoria(categoria.CategoryID)">Editar</button>
            <button class="btn btn-sm btn-info" v-on:click="detalleCategoria(categoria.CategoryID)">Detalle</button>
            <button class="btn btn-sm btn-danger" v-on:click="eliminarCategoria(categoria.CategoryID)">Elimina</button>
        </td>
    </tr>

</table>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
